<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정 만들기"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        android:textStyle="bold"
        android:id="@+id/make_account_text"
        android:layout_marginTop="100dp"
        android:lineSpacingExtra="10dp"/>

    <!--lineSpacingExtra 텍스트내 줄간격격-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/make_account_text"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:id="@+id/register">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:background="@drawable/round_edit_text_style"
                android:padding="15dp"
                android:maxLines="1"
                android:inputType="text"
                android:layout_marginTop="2dp"
                android:hint ="아이디"
                android:id="@+id/et_id"/>
            <Button
                android:layout_width="115dp"
                android:layout_marginRight="2dp"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:text="중복확인"/>


        </LinearLayout>

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/round_edit_text_style"
            android:padding="15dp"
            android:maxLines="1"
            android:inputType="text"
            android:hint="이메일"
            android:id="@+id/et_email"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/round_edit_text_style"
            android:padding="15dp"
            android:maxLines="1"
            android:inputType="text"
            android:hint="닉네임"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/round_edit_text_style"
            android:padding="15dp"
            android:maxLines="1"
            android:inputType="text"
            android:hint="비밀번호"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/round_edit_text_style"
            android:padding="15dp"
            android:maxLines="1"
            android:inputType="text"
            android:hint="비밀번호 확인"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register"
        android:layout_centerHorizontal="true"
        android:id="@+id/consent_form"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입시"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 이용약관"
            android:textColor="#aa4845"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="에 동의하신것으로 간주합니다."
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="회원가입 "
        android:layout_below="@+id/consent_form"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button_style"
        />
</RelativeLayout>
